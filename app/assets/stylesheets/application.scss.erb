@import "materialize";

.parallax-container {
  background: image-url('network.jpg') no-repeat center;
  background-size: cover;
  min-height: 380px;
  line-height: 0;
  height: auto;
  color: rgba(255,255,255,.9);
}
  .parallax-container .section {
    width: 100%;
  }

  /* label underline focus color */
  .parallax-container .input-field input[type=text], :focus {
    color: #fff;
  }

@media only screen and (max-width : 992px) {
  .parallax-container .section {
    position: absolute;
    top: 40%;
  }
  #index-banner .section {
    top: 10%;
  }
}

.header-subtext {
  margin-bottom: 2em;
}

#historical_search select {
  @extend .teal-text;
}

.keyword-collection li:hover {
  @extend .grey;
}
